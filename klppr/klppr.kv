#:kivy 1.0
#

<CalibScreen>:
    orientation: 'vertical'
    image: image
    pos_label: pos_label
    status_label: status_label

    RelativeLayout:
        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                # self here refers to the widget i.e RelativeLayout
                pos: self.pos
                size: self.size
        Image:
            id: image
            size: (0,0) # to avoid white square at startup
        Label:
            id: pos_label
        Label:
            id: status_label
            text: 'Waiting for camera...'

    GridLayout:
        cols: 5
        rows: 3

        # first row
        Label:
        Button:
            text: 'up'
            on_press: root.tilt += root.tilt_speed
        Label:
        Label:
        Button:
            text: 'zoom in'
            on_press: root.zoom += root.zoom_speed

        # second row
        Button:
            text: 'left'
            on_press: root.pan -= root.pan_speed
        Label:
        Button:
            text: 'right'
            on_press: root.pan += root.pan_speed
        Label:
        Label:

        # third row
        Label:
        Button:
            text: 'down'
            on_press: root.tilt -= root.tilt_speed
        Label:
        Label:
        Button:
            text: 'zoom out'
            on_press: root.zoom -= root.zoom_speed

